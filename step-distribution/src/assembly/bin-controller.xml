<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>bin-controller</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>template-controller/</directory>
			<outputDirectory>./</outputDirectory>
			<excludes>
				<exclude>**/dummy.txt</exclude>
				<exclude>bin/*.sh</exclude>
				<exclude>bin/*.command</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>template-controller/bin</directory>
			<outputDirectory>./bin</outputDirectory>
			<includes>
				<include>*.sh</include>
				<include>*.command</include>
			</includes>
			<fileMode>0744</fileMode>
		</fileSet>
	</fileSets>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>ch.exense.step:step-controller-server-webapp</include>
				<include>ch.exense.step:step-controller-plugins-rtm</include>
				<include>ch.exense.step:step-controller-plugins-postgres</include>
				<include>ch.exense.step:step-controller-plugins-script-editor</include>
				<include>ch.exense.step:step-functions-plugins-selenium</include>
				<include>ch.exense.step:step-functions-plugins-jmeter</include>
				<include>ch.exense.step:step-functions-plugins-node</include>
			</includes>
			<binaries>
				<dependencySets>
					<dependencySet>
						<outputDirectory>lib</outputDirectory>
						<unpack>false</unpack>
					</dependencySet>
				</dependencySets>
				<outputDirectory>lib</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>